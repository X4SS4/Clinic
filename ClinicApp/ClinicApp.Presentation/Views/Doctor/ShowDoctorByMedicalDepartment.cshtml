@model PatientRegeistrationViewModel;
@{
    ViewData["Title"] = "Registration to doctor";
}


<h2>Doctors</h2>
<div>
    @foreach (var doctor in Model.Employees)
    {
        <form method="post" asp-controller="Registration" asp-action="RegistrationPatient">
        <input type="hidden" name="doctorId" value="@doctor.Id" />
        <input type="hidden" name="patientId" value="@Model.Patient.FIN" />
            <button type="submit" class="nav-link text-dark"
                style="border: none; background-color: transparent; cursor: pointer;">Registration</button>
            <div class="card mb-4">
                <div class="card-header">
                    @doctor.Firstname
                </div>
                <div class="card-header">
                    @doctor.Lastname
                </div>
                <div class="card-header">
                    @doctor.MedicalDepartment
                </div>
            </div>
        </form>
    }
</div>