@model MedicalReceptionisLogintDTO;
@{
  ViewData["Title"] = "Login";
}

<span class="text-danger">@ViewData["Error"]</span>

<form method="post" asp-controller="Home" asp-action="Login">
  <div class="mb-3">
    <label class="form-label" asp-for="@Model.Email">Email</label>
    <input type="email" class="form-control" asp-for="@Model.Email">
    <span class="text-danger" asp-validation-for="@Model.Email"></span>
  </div>
  <div class="mb-3">
    <label class="form-label" asp-for="@Model.Password">Password</label>
    <input type="password" class="form-control" asp-for="@Model.Password">
    <span class="text-danger" asp-validation-for="@Model.Password"></span>
  </div>
  <button type="submit" class="btn btn-success">Save</button>
</form>



@section Scripts {
  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
  <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}